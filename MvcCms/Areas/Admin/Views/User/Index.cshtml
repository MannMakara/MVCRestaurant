@model IEnumerable<MvcCms.Models.CmsUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_DashBoardLayout.cshtml";
}

<ul class="bt-list" style="width:50%">
    <li><h2>Users</h2></li>

    <li>@Html.ActionLink("Create New", "Create", "User", null, new { @class = "hvr-icon-float-away col-9" })</li>
</ul>

<div class="agile-tables">
    <div class="w3l-table-info">
        @AntiForgery.GetHtml()
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DisplayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { username = item.UserName })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { username = item.UserName }, new { data_action = "delete", data_value = item.UserName })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

