@model IEnumerable<MvcCms.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_DashBoardLayout.cshtml";
}

<ul class="bt-list" style="width:50%">
    <li><h2>Posts</h2></li>
    
    <li>@Html.ActionLink("Create New", "Create","Post",null, new { @class= "hvr-icon-float-away col-9" })</li>
</ul>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="agile-tables">
    <div class="w3l-table-info">
        @AntiForgery.GetHtml()
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Published)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Published)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Author.DisplayName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { data_action = "delete", data_value = item.Title })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

