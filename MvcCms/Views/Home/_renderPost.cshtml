<div class="slider-item">
    <div class="product-block">
        <div class="product-block-inner">
            <div class="spacer">
                <div class="img_hid">
                    <a href="@Url.Action("post","home",new { controller = "home", postId = Model.Id})"
                       title="@Model.Title">
                        <img src="@Model.ImageUrl"
                             alt="@Model.Title"
                             class="featuredProductImage"
                             border="0" />
                    </a>
                </div>
                <div class="clear"></div>
                <div class="qqq">
                    <div class="clear"></div>
                    <div class="product-name">
                        @Html.ActionLink(Model.Title, "post", new { controller = "home", postId = Model.Id })
                    </div>
                    <div class="PricesalesPrice vm-display vm-price-value">
                        <span class="PricesalesPrice">$@Model.Price</span>
                    </div>

                    <div class="addtocart-area">
                        <form method="post"
                              class="product js-recalculate"
                              action="http://demos.templatemela.com/virtuemart/VTM05/VTM050106/index.php/component/virtuemart/">
                            <div class="product-fields">
                                <div id="product-grid-page"
                                     class="productbox-grid">


                                    <div class="product-field product-field-type-S ">
                                        <span class="product-fields-title-wrapper">
                                            <span class="product-fields-title"><strong>String, admin list</strong></span>
                                            <span class="hasTooltip"
                                                  title="&lt;strong&gt;String, admin list&lt;/strong&gt;&lt;br /&gt;Select a variant">
                                                <img src="~/themes/media/system/images/tooltip.png" alt="Tooltip" />
                                            </span>
                                        </span>
                                        <div class="product-field-display">
                                            <select id="154-407customProductData"
                                                    name="customProductData[154][14]"
                                                    class="vm-chzn-select">
                                                <option value="407">
                                                    Wool No
                                                    additional
                                                    charge
                                                </option>
                                            </select>
                                        </div>
                                    </div>


                                    <div class="clear"></div>
                                </div>
                            </div>
                            <span class="grid_default_width"
                                  style="display:none; visibility:hidden"></span>
                            <div class="addtocart-bar">
                                <!-- <label for="quantity154" class="quantity_box">Quantity: </label> -->
                                <span class="quantity-box">
                                    <input type="text" class="quantity-input js-recalculate" name="quantity[]"
                                           onblur="Virtuemart.checkQuantity(this,1,'You can buy this product only in multiples of %s pieces!');"
                                           onclick="Virtuemart.checkQuantity(this,1,'You can buy this product only in multiples of %s pieces!');"
                                           onchange="Virtuemart.checkQuantity(this,1,'You can buy this product only in multiples of %s pieces!');"
                                           onsubmit="Virtuemart.checkQuantity(this,1,'You can buy this product only in multiples of %s pieces!');"
                                           value="1" />
                                </span>
                                <span class="quantity-controls js-recalculate">
                                    <input type="button" class="quantity-controls quantity-plus" value=" " />
                                    <input type="button" class="quantity-controls quantity-minus" value=" " />
                                </span>
                                <span class="addtocart-button">
                                    <input type="submit" name="addtocart" class="addtocart-button" value="Add to Cart" title="Add to Cart" />
                                </span>
                                <input type="hidden"
                                       name="virtuemart_product_id[]"
                                       value="154" />
                                <noscript>
                                    <input type="hidden"
                                           name="task"
                                           value="add" />
                                </noscript>
                            </div>
                            <input type="hidden" name="option"
                                   value="com_virtuemart" />
                            <input type="hidden" name="view"
                                   value="cart" />
                            <input type="hidden"
                                   name="virtuemart_product_id[]"
                                   value="154" />
                            <input type="hidden" class="pname"
                                   value="Hammer" />
                            <input type="hidden" name="Itemid"
                                   value="101" />
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

